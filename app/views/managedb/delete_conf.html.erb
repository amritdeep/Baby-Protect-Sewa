  <div class="page-title">
            <div class="container">
                <div class="row">
                    <div class="span12">
                        <i class="icon-user page-title-icon"></i>
                        <h2>Delete Family/</h2>
                        <p>Delete a family record</p>
                        <p class="pull-right" style="padding-right:30px">
                                 <br>Logged in as : <%= current_user.name %>
                        </p>
                    </div>
                </div>
            </div>
        </div>

<div class="what-we-do container">
        <div class="row">
            <div class="span12">
                <div class="service" align="left" style="padding-left:10px">
                    <h3>Delete confirmation</h3>

                    <%= form_for(@family, :as => "family", :url => "/managedb/delete_conf") do |f| %>
                      <div>
                        <b>Family ID:</b>  <%=@family.famid%><br />
                        <%= f.hidden_field :famid %>
                        <b>Village: </b> <%=@family.village%><br>
                        <b>BPL Card Number: </b> <%=@family.cardNum%><br>
                        <b>Asha Worker: </b> <%=@family.ashaID%><br>
                      </div><br>
                       <h4>Members: </h4>
                <%@persons.each_with_index do |per,i|%> 
                 <b>Name:</b> <%=per.fname %> <%=per.mname%> <%=per.lname%> <b>DOB: </b> <%=per.dob%> <%if per.adult == 1 %>Adult<%else%>Child<%end%><b>-</b><%if per.gender == 'm' %>Male<%else%>Female<%end%> <b>Mobile Number: </b> <%=per.mobnum%> <b>Health Insurance Number: </b><%=per.health_insurance_num%><br>


                 <%end%>
                 <h4>Are you sure you want to delete this family record?</h4>
                  <br><div><%= f.submit "Confirm" ,:class=>"btn btn-warning" %>
                      <input type="button" value="Back" id ="discard_btn" onclick="javascript:window.location.href='/managedb/delete'" class="btn btn-inverse">
                  </div>
                <% end %>
                </div>
              </div>  
          </div>  <!-- END row -->   
                    
</div>






<br><br>
