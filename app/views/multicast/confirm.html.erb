           <div class="what-we-do container" style="text-align:left">
            <div class="row">
                <div class="span12 service">
                 <div style="padding:10px">  
                  	
				<%if @done %>
				<h4 class="alert alert-success">Multicast deployed</h4><br><br>
				<big>To see the live progress of your multicast : </big><br><br><%= link_to "View Muticast progress" , :action => :last_multicast%><br><br><Br>
				<%= link_to "Home" , "/" %>
				<%else %>
				<h3 style="color:#9d426b">Confirmation - Final Step</h3><br>
				<form method="post">

				<%= hidden_field_tag "multicast[id]", @multicast.id%>

				<h4 style="color:#9d426b"><%=@multicast.sms_voice.capitalize%> Multicast</h4>
				<b class="label label-info">Send to  <%=pluralize(@multicast.people_ids.count, 'person')%></b><br>
				<br>
				<h4 style="color:#9d426b">Scheduled :</h4>
				<b class="label label-important"><% if @multicast.when =="lat"%>
				<%=@multicast.datetime%>
				<%else%>
				Immediately 
				<%end%></b>

				<%if @multicast.sms_voice =="sms"%>
					<div style="width:200px">
					<br><b style="color:#9d426b">SMS TEXT </b><br>
					<b class="label label-success"><%= @multicast.message%></b>
					<br>
					</div>

				<%else%>
					<div style="width:200px">
					<br><b style="color:#9d426b">Audio File Name :</b><br>
					<b class="label label-success"><%= @multicast.audio_file_name%></b>
					<br>
					</div>
				<%end%>

				<br><br>
				<input type="submit" value="Confirm" class="btn btn-success">
                <input type="button" value="Discard" class="btn btn-inverse">
				</form>
				<%end%>



