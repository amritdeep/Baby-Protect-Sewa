       <div class="page-title">
            <div class="container">
                <div class="row">
                    <div class="span12">
                        <i class="icon-user page-title-icon"></i>
                        <h2>Unicast Settings/</h2>
                        <p>Change unicast reminder settings</p>
                        <p class="pull-right" style="padding-right:30px">
                                 <br>Logged in as : <%= current_user.name %>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="what-we-do container">
            <div class="row">
               
                <div class="service span6" align="left">
                <div style="padding:20px">
                        <h3 style="color:#9d426b">Unicast Settings</h3>
                        <%if @message%>
                            <div class="alert alert-success">
                                 <%=@message%>
                            </div>
                        <%end%>

                         <big><b>Unicast reminders</b></big><br>
                        <%= form_for( current_user,:as=>"unicast" ,:url =>"/unicast", :method=>:post ) do |f| %>
                         <%= f.radio_button :uni_act_inactive, '1'%> <span style="font-size:15px;">ON</span>
                          <%= f.radio_button :uni_act_inactive, '0' %> <span style="font-size:15px;">OFF</span>
                          <br><br>
                        <big><b>Unicast Option</b></big><br>

                        
                          <%= f.radio_button :uni_sms_voice, 'voice'%> <span style="font-size:15px;">Voice</span>
                          <%= f.radio_button :uni_sms_voice, 'sms' %> <span style="font-size:15px;">SMS</span>
                            <br><br>
                            <big><b>Days before to send voice/sms</b></big><br>
                          <%= f.select(:uni_days_before_rem, [1,2,3,4,5,6,7]) %> <br><br>
                          <big><b>What time do you want to send voice/sms reminder</b></big><br>
                          <%= f.time_select(:uni_time_of_day, :include_seconds => false) %><br><br>
                          <%= f.submit("Save",:class=>"btn btn-success") %>
                        <%end%>

                    </div>    
                   </div>   
                   <div class="service span6" align="left">
                       <div style="padding:20px"> 
                        <h3 style="color:#9d426b">Defaulters List</h3>
