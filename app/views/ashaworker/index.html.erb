        <script>
            
            function validateName(uid,mx,my){
               
                var uid_len = uid.val().length;  
                if (uid_len == 0 || uid_len >= my || uid_len < mx)  
                {  
                    $('#errors').append("<li>Asha Worker name cannot be empty<br>"); 
                   
                    uid.focus();  
                    return false;
                }
                else
                {
                    return true;
                }
            }
            function validateMob(cell){
                if(  /^\d{10}$/.test(cell.val()))
                {
                    return true;
                }
                else{
                    $('#errors').append("<li>Mobile number should be 10 digits only<br>"); 
                    return false;
                }
            }

            function validateForm(){
                $('#errors').html('');
                var uid = $('#asha_worker_name');
                var mob = $('#asha_worker_mobnum');
                var i = 0 ;
                if (validateName(uid,1,20)){
                    i++;
                }
                if (validateMob(mob)) {
                  i++;
                }
                
                if(i==2) { $('#errors').hide();return true;}
                else {
                      $('#errors').show('50');
                      return false;
                    
                }
            }
            
            $(function() { 
                $('#errors').hide();
                $('#new_asha_worker').bind('submit',validateForm);
            
            });
        </script>
